<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todo list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="./styles/styles.css">
</head>

<body class="container d-flex flex-column justify-content-center pt-5">
    <h1 class="mb-4 align-self-center">TODO LIST</h1>

    <div class="d-flex gap-3 mb-4">
        <div class="input-group">
            <input type="text" class="form-control border-end-0" placeholder="Search...">
            <span class="input-group-text bg-transparent">
                <i class="bi bi-search"></i>
            </span>
        </div>

        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle text-end" data-bs-toggle="dropdown" aria-expanded="false">
                All
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/posts">All</a></li>
                <li><a class="dropdown-item" href="/posts?status=completed">Complete</a></li>
                <li><a class="dropdown-item" href="/posts?status=incomplete">Incomplete</a></li>
            </ul>
        </div>
    </div>

    <div class="mb-3 d-flex flex-column">
        <%if (locals.posts.length) { %>
            <% posts.forEach((post, i, arr) => { %>
                <div class="d-flex gap-3 align-items-center my-2">
                    <div class="input-group-text bg-transparent border-0 px-0">
                        <input
                            class="form-check-input mt-0"
                            type="checkbox"
                            style="width: 24px; height: 24px;"
                            <%= post.isComplete ? 'checked' : '' %>
                            onchange="toggleTodo(<%= post.id %>, this.checked)"
                        >
                    </div>
                    <p
                        class="todo-title m-0 <%= post.isComplete ? 'todo-completed' : '' %>"
                        style="font-size: 16px; font-weight: 500;"
                        data-id="<%= post.id %>"
                    >
                        <%= post.title %>
                    </p>
                    <div class="d-flex gap-2 ms-auto mb-auto">
                        <button
                                class="edit-btn btn btn-light"
                                style="width: 24px; height: 24px;"
                        >
                            <i class="bi bi-pencil" style="font-size: 14px;"></i>
                        </button>

                        <button
                                class="delete-btn btn btn-light"
                                style="width: 24px; height: 24px;"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteConfirmModal"
                                data-id="<%= post.id %>"
                        >
                            <i class="bi bi-trash3" style="font-size: 14px;"></i>
                        </button>
                    </div>
                </div>
                <% if (i !== arr.length - 1) { %>
                    <div class="divider"></div>
                <% } %>
            <% }) %>
        <% } else { %>
              <div class="d-flex flex-column align-items-center">
                  <img class="mb-2" src="./img/empty_list.png">
                  <p style="font-size: 18px; font-weight: 500;">Empty...</p>
              </div>
        <% } %>
    </div>

    <button class="btn btn-primary align-self-end mt-3 r-50% rounded-circle" style="width: 50px; height: 50px;" data-bs-toggle="modal" data-bs-target="#createPostModal">
        <i class="bi bi-plus-lg"></i>
    </button>

    <div class="modal fade" id="createPostModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Create a todo</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/submit" method="POST" class="modal-body d-flex flex-column gap-3">
                    <input type="text" class="form-control" name="noteHeader" placeholder="Note title" required>
                    <textarea
                            class="form-control"
                            name="noteDescription"
                            rows="4"
                            placeholder="Input your note..."
                    ></textarea>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteConfirmModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete todo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    Are you sure you want to delete this todo?
                </div>

                <div class="modal-footer">
                    <button
                            type="button"
                            class="btn btn-secondary"
                            data-bs-dismiss="modal"
                    >
                        Cancel
                    </button>
                    <button
                            type="button"
                            class="btn btn-danger"
                            id="confirmDeleteBtn"
                    >
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="./js/todos.js"></script>
    <script src="./js/deleteTodo.js"></script>
</body>
</html>